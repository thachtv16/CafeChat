<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_50"
    android:id="@+id/rl_action_bar_single"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_left_extra"
        android:src="@drawable/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_action_bar_single"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_left_extra"/>

</RelativeLayout>